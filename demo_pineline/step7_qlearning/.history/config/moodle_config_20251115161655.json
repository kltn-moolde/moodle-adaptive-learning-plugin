{
  "version": "1.0",
  "description": "Moodle API and CSV configuration",
  
  "api": {
    "enabled": true,
    "base_url": "http://139.99.103.223:9090/webservice/rest/server.php",
    "token": "",
    "format": "json",
    "timeout": 30,
    "retry_attempts": 3,
    "retry_delay": 1.0,
    "description": "Moodle REST API configuration. Leave token empty to use environment variable MOODLE_API_TOKEN"
  },
  
  "csv": {
    "enabled": true,
    "log_path": "data/log/log.csv",
    "grade_path": "data/log/grade.csv",
    "description": "CSV fallback paths. Used when API is unavailable"
  },
  
  "cache": {
    "enabled": true,
    "type": "file",
    "directory": "data/cache",
    "ttl_seconds": 3600,
    "description": "Cache configuration. TTL = 1 hour default"
  },
  
  "course": {
    "course_id": 2,
    "description": "Moodle course ID"
  },
  
  "sync": {
    "mode": "auto",
    "auto_fallback": true,
    "description": "auto = try API first, fallback to CSV. manual = use specified mode only"
  }
}

